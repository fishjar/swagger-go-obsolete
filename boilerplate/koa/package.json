{
  "name": "koa-demo",
  "version": "1.0.0",
  "description": "一个koa+sequelize的demo",
  "scripts": {
    "start": "cross-env NODE_ENV=production node ./dist/server.js",
    "dev": "cross-env NODE_ENV=development DEBUG=koa* nodemon --inspect ./src/server.js",
    "build": "rimraf dist && cross-env NODE_ENV=production babel src -d dist -s",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "gabe",
  "license": "ISC",
  "dependencies": {
    "@koa/cors": "^2.2.2",
    "cross-env": "^5.2.0",
    "fs-extra": "^7.0.1",
    "koa": "^2.6.1",
    "koa-bodyparser": "^4.2.1",
    "koa-compress": "^3.0.0",
    "koa-logger": "^3.2.0",
    "koa-qs": "^2.0.0",
    "koa-router": "^7.4.0",
    "mysql2": "^1.6.4",
    "sequelize": "^4.41.1",
    "strip-ansi": "^5.0.0",
    "winston": "^3.1.0",
    "winston-daily-rotate-file": "^3.5.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-minify": "^0.5.0",
    "nodemon": "^1.18.6",
    "rimraf": "^2.6.2",
    "sqlite3": "^4.0.3"
  },
  "nodemonConfig": {
    "execMap": {
      "js": "babel-node"
    }
  },
  "babel": {
    "sourceMaps": "both",
    "plugins": [
      "transform-runtime",
      "transform-object-rest-spread"
    ],
    "presets": [
      "env"
    ],
    "env": {
      "production": {
        "presets": [
          "minify"
        ]
      }
    }
  }
}
